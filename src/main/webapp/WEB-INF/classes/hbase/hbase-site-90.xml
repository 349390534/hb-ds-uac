<configuration>
    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://192.168.101.90:9000/hbase</value>
    </property>
    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
        <description>The mode the cluster will be in. Possible values are
            false: standalone and pseudo-distributed setups with managed Zookeeper
            true: fully-distributed with unmanaged Zookeeper Quorum (see hbase-env.sh)
        </description>
    </property>
    <property> <name>hbase.zookeeper.quorum</name> <value>192.168.101.90,192.168.208.22,192.168.106.201</value> </property>
    <property> <name>hbase.master</name> <value>192.168.101.90:60000</value></property>
    <property> <name>hbase.master.port</name> <value>60000</value> <description>The port master should bind to.</description> </property>

</configuration>
